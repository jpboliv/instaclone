<li>
    <% if notification.notice_type == "comment"%>
        <%= link_to "#{notification.notified_by.user_name} left a #{notification.notice_type} on your post", link_through_path(notification)%>
        <%= time_ago_in_words(notification.created_at)%>
    <% else %>
        <%= link_to "#{notification.notified_by.user_name} has #{notification.notice_type}d your post", link_through_path(notification)%>
        <%= time_ago_in_words(notification.created_at)%>
    <% end %>
</li>
