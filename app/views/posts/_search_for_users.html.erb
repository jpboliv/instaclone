<div class="container-searchbox">
  <%= form_with url: search_path, local: true, method: :get, html: {class: "form-inline my-2 my-lg-0"} do |form| %>
    <input class="form-control mr-sm-2" type="text" placeholder="Search for a user" data-behavior="autocomplete">
    <%= form.button "Search", name: "search", class: 'search-submit-button' %>
  <% end %>
</div>
