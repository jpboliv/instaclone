<div class ="posts-wrapper">
    <div class="row profile-header">
        <div class="col-md-6">
            <div class="img-circle">
                <%= image_tag(@user.current_avatar(), id: 'image-preview', class: "img-responsive img-circle profile-image") %>
            </div>
        </div>
        <div class="user-name-and-follow">
            <h3 class="profile-user-name">
                <%= @user.user_name%>
            </h3>
            <span> 
                <% if @user == current_user %>
                    <%= link_to "Edit Profile", edit_profile_path(@user.user_name), class: 'btn edit-button' %>
                <%end%>
            </span>
        </div>
        <p class="profile-bio"> 
            <%= @user.bio%>
        </p>
        <div class="user-statistics">
            <p><%= pluralize @user.posts.count, 'post' %></p>
        </div>
    </div>
</div>
<div class="container-navtab">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#my-pics">My Pictures</a></li>
    <li><a data-toggle="tab" href="#most-liked">Favourites</a></li>
  </ul>
  <div class="tab-content">  
    <div id="home" class="tab-pane fade in active">
      <%= render "all_posts", post: @posts %>
    </div>
    <div id="most-liked" class="tab-pane fade">
      <%= render "most_liked", post: @only_liked_posts %>
    </div>
  </div>
</div>
