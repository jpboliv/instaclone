<div id="comment_<%= comment.id %>">
    <div class ="user-name">
        <%= comment.user.user_name %>
    </div>
    <div class ="comment-content ">
        <%= comment.content%>
    </div>
    <%if comment.user == current_user %>
        <%= link_to post_comment_path(post, comment), method: :delete,remote: true ,id: "delete-#{comment.id}",data: { confirm: "Are you sure" } do %>
            <span class="glyphicon glyphicon-remove delete-comment"> </span>
        <%end%>
    <%end%>
</div>